 
  
        <div class="table-row-group">
          <div class="table-row">
            <div scope="col" class="table-cell border-b border-gray-300 whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0"><%= link_to "View ##{problem.id}", problem %></div>
            <div scope="col" class="table-cell border-b border-gray-300 whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= link_to problem.operator.name, operator_path(problem.operator) %></div>
            <div scope="col" class="table-cell border-b border-gray-300 whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= link_to problem.user.name, user_path(problem.user) %></div>
            <div data-controller="problem-status-colour" scope="col" class="table-cell border-b border-gray-300 whitespace-nowrap px-3 py-4 text-sm text-gray-500">
              <span data-problem-status-colour-target="status" class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium capitalize ring-1 ring-inset ring-gray-500/10 <%= problem.status %>">
                <%= problem.status.gsub("_", " ") %>
              </span>
            </div>
            
            <div scope="col" class="table-cell border-b border-gray-300 whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= link_to problem.problem_type.capitalize, problems_path(params[problem.problem_type]) %></div>
            <div scope="col" class="table-cell border-b border-gray-300 whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= problem.problem_sub_type.capitalize %></div>
            <% if !current_account.user? %>
            <div class="table-cell relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
              <%= link_to "Edit", edit_problem_path(problem), class:"text-indigo-600 hover:text-indigo-900" %><span class="sr-only"><%= problem.id%></span>
            </div>
            <% end %>
          </div>
        </div>
      